<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Avail">

    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/image"/>
    
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:orientation="vertical"
       android:layout_centerHorizontal="true"
        >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Almost there !"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show this screen to brand to avail your reward!"
            android:textSize="14dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            />


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_gravity="center"
    >

    <EditText
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="10dp"
        android:id="@+id/edit1"
        android:padding="10dp"
        android:background="@drawable/shape3"
        android:layout_margin="15dp"
        android:textAlignment="center"

        />

    <EditText
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="10dp"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:id="@+id/edit2"
        android:textAlignment="center"

        android:background="@drawable/shape3"



        />
    <EditText
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/edit3"
        android:textAlignment="center"

        android:elevation="10dp"
        android:padding="10dp"
        android:background="@drawable/shape3"
        android:layout_margin="15dp"



        />
    <EditText
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="10dp"
        android:padding="10dp"
        android:id="@+id/edit4"
        android:textAlignment="center"

        android:background="@drawable/shape3"
        android:layout_margin="15dp"



        />



</LinearLayout>

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Enter total bill amont"
    android:padding="25dp"        android:textAlignment="center"

    android:layout_margin="10dp"
    android:id="@+id/edit5"

    android:background="@drawable/shape3"
    android:layout_gravity="center"
    />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter total bill amont"
            android:text="Get this Passcode from the Brands Fb page here is the
            username:"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:id="@+id/text5"
            android:layout_gravity="center"
            />


<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/colorPrimary"
    android:text="AVAIL"
    android:textColor="@color/colorWhite"
android:textStyle="bold"
    android:layout_gravity="center"
    android:id="@+id/avail"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"

    />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/red"
            android:text="REPORT"
            android:id="@+id/report"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_gravity="center"

            android:paddingLeft="30dp"
            android:paddingRight="30dp"

            />

    </LinearLayout>
    
    
    
</RelativeLayout>